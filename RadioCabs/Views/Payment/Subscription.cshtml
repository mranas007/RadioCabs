@model RadioCabs.Models.ViewModel.SubscriptionVM
@{
    ViewData["Title"] = "Subscription Status";
}

<div class="container mt-4">
    <h2 class="text-center text-primary">Subscription Status</h2>

    @if (Model.IsSubscribed)
    {
        <div class="col-md-4 mx-auto">
            <div class="card shadow-sm border-0 rounded-4 text-center">
                <div class="card-body p-4">
                    <div class="mb-3">
                        <img src="~/images/donemark.png" alt="Confirmed" class="img-fluid" style="max-height: 120px;">
                    </div>
                    <h5 class="text-success text-uppercase fw-bold mb-2">@Model.CurrentPlan</h5>
                    <p class="text-muted mb-1">You are currently subscribed to this plan.</p>
                    <p class="text-muted">Last Payment: <strong>@Model.LastPaymentDate</strong></p>
                </div>
            </div>
        </div>
    }
    else
    {
      	<div class="col-md-4 mx-auto">
			<div class="card shadow-sm border-0 rounded-4 text-center">
				<div class="card-body p-4">
					<div class="mb-3">
						<img src="~/images/x-mark-3-xxl.png" alt="Not Subscribed" class="img-fluid" style="max-height: 120px;">
					</div>
					<h5 class="text-danger text-uppercase fw-bold mb-2">No Active Plan</h5>
					<p class="text-muted mb-1">You are not subscribed yet.</p>
					<p class="text-muted">Choose a plan to activate your subscription.</p>
					<a asp-controller="Payment" asp-action="Subscribe" class="btn btn-primary mt-2 px-4">Subscribe Now</a>
				</div>
			</div>
		</div>
    }
</div>
