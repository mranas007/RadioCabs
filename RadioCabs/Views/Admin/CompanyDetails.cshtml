@model RadioCabs.Models.Company

@{
    ViewData["Title"] = "Company Details";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Company Details</h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Company Name</dt>
                <dd class="col-sm-9">@Model.CompanyName</dd>

                <dt class="col-sm-3">Company ID</dt>
                <dd class="col-sm-9">@Model.CompanyID</dd>

                <dt class="col-sm-3">Designation</dt>
                <dd class="col-sm-9">@Model.Designation</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Membership</dt>
                <dd class="col-sm-9">@Model.Membership</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Owner Name</dt>
                <dd class="col-sm-9">@Model.User.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.User.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.User.PhoneNumber</dd>
            </dl>

            <button class="btn btn-secondary mt-3" onclick="history.back()"><i class="bi bi-arrow-left"></i> Go Back</button>
        </div>
    </div>
</div>
