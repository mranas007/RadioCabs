@{
	ViewData["Title"] = "Register";
}

<div class="container mt-5" style="min-height:90vh">
	<h2 class="text-center text-primary fw-bold mb-4">Join Our Platform</h2>
	<p class="text-center text-muted mb-5">Choose your registration type to get started.</p>

	<div class="row justify-content-center gap-3">
		<!-- Driver Registration Card -->
		<div class="col-md-5">
			<div class="card shadow-lg border-0 rounded-3 h-100">
				<div class="card-body text-center d-flex flex-column align-items-center">
					<div class="icon-box text-primary mb-3">
						<i class="fas fa-car fa-3x"></i>
					</div>
					<h5 class="card-title fw-bold">Register as a Driver</h5>
					<p class="card-text text-muted">Join our team of professional drivers and start earning today.</p>
					<div class="mt-auto w-100">
						<a class="btn btn-primary w-100 fw-bold py-2" asp-controller="Account" asp-action="Register" asp-route-usertype="Driver">
							<i class="fas fa-sign-in-alt"></i> Register as Driver
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Company Registration Card -->
		<div class="col-md-5">
			<div class="card shadow-lg border-0 rounded-3 h-100">
				<div class="card-body text-center d-flex flex-column align-items-center">
					<div class="icon-box text-success mb-3">
						<i class="fas fa-building fa-3x"></i>
					</div>
					<h5 class="card-title fw-bold">Register as a Company</h5>
					<p class="card-text text-muted">Expand your business by registering your company with us.</p>
					<div class="mt-auto w-100">
						<a class="btn btn-success w-100 fw-bold py-2" asp-controller="Account" asp-action="Register" asp-route-usertype="Company">
							<i class="fas fa-sign-in-alt"></i> Register as Company
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="https://kit.fontawesome.com/YOUR_FONTAWESOME_KEY.js" crossorigin="anonymous"></script>
}
