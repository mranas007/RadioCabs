@using RadioCabs.Models.ViewModel
@model ForgotPasswordVM



<div class="d-flex align-items-center justify-content-center" style="min-height:90vh;">
    <div class="card shadow-lg p-4 border-0" style="max-width: 400px; width: 100%;">
        <div class="card-body text-center">
            <i class="fas fa-key text-primary display-3 mb-3"></i>
            <h3 class="text-dark mb-3">Forgot Password?</h3>
            <p class="text-muted">Enter your email and we'll send you a link to reset your password.</p>

            <form asp-action="ForgotPassword">
                <div class="form-group mb-3 text-start">
                    <label asp-for="Email" class="fw-bold">Email Address</label>
                    <input asp-for="Email" id="email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
            </form>

            <p class="mt-3 text-muted">
                Remember your password?
                <a asp-controller="Account" asp-action="Login" class="text-primary">Login</a>
            </p>
        </div>
    </div>
</div>
