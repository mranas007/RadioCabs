@using RadioCabs.Models.ViewModel
@model ResetPasswordVM



<div class="container d-flex flex-column align-items-center justify-content-center py-4" style="min-height:90vh;">
    <div class="card shadow-lg border-0 p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body text-center">
            <i class="fas fa-lock text-primary display-3 mb-3"></i>
            <h3 class="card-title text-dark">Reset Your Password</h3>
            <p class="text-muted">Enter your new password below.</p>

            <form asp-action="ResetPassword" class="text-start">
                <input asp-for="Token" type="hidden" />

                <div class="form-group mb-3">
                    <label asp-for="Email" class="fw-bold">Email</label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="fw-bold">New Password</label>
                    <div class="input-group">
                        <input asp-for="Password" id="newPassword" type="password" class="form-control" />
                        <button type="button" class="btn btn-outline-secondary toggle-password" data-target="#newPassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="fw-bold">Confirm Password</label>
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" id="confirmPassword" type="password" class="form-control" />
                        <button type="button" class="btn btn-outline-secondary toggle-password" data-target="#confirmPassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-3">Reset Password</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.toggle-password').forEach(button => {
        button.addEventListener('click', function () {
            let input = document.querySelector(this.dataset.target);
            input.type = input.type === "password" ? "text" : "password";
            this.innerHTML = input.type === "password" ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
        });
    });
</script>
