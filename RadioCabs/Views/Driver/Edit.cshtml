@model RadioCabs.Models.Driver

@{
    ViewData["Title"] = "Edit Driver Profile";
}



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0"><i class="bi bi-person-circle"></i> Edit Driver Profile</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-person-fill"></i> Driver Name</label>
                            <input asp-for="DriverName" class="form-control shadow-sm" placeholder="Enter driver name" />
                            <span asp-validation-for="DriverName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-telephone-fill"></i> Contact Person</label>
                            <input asp-for="ContactPerson" class="form-control shadow-sm" placeholder="Enter contact person" />
                            <span asp-validation-for="ContactPerson" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-geo-alt-fill"></i> Address</label>
                            <textarea asp-for="Address" class="form-control shadow-sm" placeholder="Enter address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-building"></i> City</label>
                            <input asp-for="City" class="form-control shadow-sm" placeholder="Enter city" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-award-fill"></i> Experience (Years)</label>
                            <input asp-for="Experience" type="number" class="form-control shadow-sm" placeholder="Enter years of experience" />
                            <span asp-validation-for="Experience" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-card-text"></i> Description</label>
                            <textarea asp-for="Description" class="form-control shadow-sm" placeholder="Write a brief description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                            <a asp-action="Profile" asp-route-id="@Model.Id" class="btn btn-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
