@using RadioCabs.Models.ViewModel
@model SubscriptionVM
@{
	ViewData["Title"] = "Subscription";
}
<div class="container mt-4">
	
	<h2 class="text-center text-primary">Subscription</h2>

	@if (Model.IsSubscribed)
	{
		<div class="col-md-4 mx-auto">
			<div class="card shadow-sm border-0 rounded-4 text-center">
				<div class="card-body p-4">
					<div class="mb-3">
						<img src="~/images/donemark.png" alt="Confirmed" class="img-fluid" style="max-height: 120px;">
					</div>
					<h5 class="text-success text-uppercase fw-bold mb-2">@Model.CurrentPlan</h5>
					<p class="text-muted mb-1">You are currently subscribed to @Model.CurrentPlan plan.</p>
					<p class="text-muted">Last Payment expiry date: <strong>@Model.LastPaymentDate</strong></p>
				</div>
			</div>
		</div>
	}
	else
	{
		<div class="text-center mb-3">
			<h4 class="text-danger">You are not subscribed. Choose a plan below:</h4>
		</div>

		<div class="row justify-content-center">
			<!-- Basic Plan -->
			<div class="col-md-4">
				<div class="card border-success shadow-sm">
					<div class="card-body text-center">
						<h4 class="text-success">Basic Plan</h4>
						<h5 class="text-danger">$9.99 / Month</h5>
						<p class="text-muted">visibility for looking Cab job.</p>
						<ul class="list-unstyled">
							<li>✔ Featured Listing</li>
							<li>✔ Eligible for searching services</li>
							<li>✔ Email Support</li>
						</ul>
					</div>
				</div>
			</div>

			<!-- Premium Plan -->
			<div class="col-md-4">
				<div class="card border-warning shadow-sm">
					<div class="card-body text-center">
						<h4 class="text-warning">Premium Plan</h4>
						<h5 class="text-danger">$19.99 / Quarterly</h5>
						<p class="text-muted">Maximum exposure and full features.</p>
						<ul class="list-unstyled">
							<li>✔ Priority Listing</li>
							<li>✔ Eligible for searching services</li>
							<li>✔ 24/7 Support</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-md-8 mt-4">
				<a asp-controller="Payment" asp-action="Subscribe" class="btn btn-primary w-100">Subscribe Now</a>
			</div>
		</div>
	}
</div>
