@model List<RadioCabs.Models.Advertisement>
@{
    ViewData["Title"] = "List of Advertisements";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Advertisements</h2>
        <a asp-action="CreateAd" asp-controller="Company" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Create Advertisement
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <p class="text-center text-danger">No advertisements available. Start by creating one!</p>
    }
    else
    {
        <div class="row">
            @foreach (var ad in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg border-0 rounded-lg">
                        <div class="card-body">
                            <h5 class="text-dark fw-bold mb-2">@ad.Title</h5>
                            <p class="text-muted small mb-2">@ad.Description</p>
                            <small class="text-secondary">📍 @ad.Address | 📞 @ad.Mobile</small>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-action="EditAd" asp-route-id="@ad.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form asp-action="DeleteAd" asp-route-id="@ad.Id" method="post">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this advertisement?');">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
