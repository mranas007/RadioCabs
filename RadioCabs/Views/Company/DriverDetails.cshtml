@model RadioCabs.Models.Driver

@{
    ViewData["Title"] = "Driver Details";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-lg">
        <!-- Header -->
        <div class="card-header bg-primary bg-gradient text-white text-center py-4" style="background: linear-gradient(45deg, #007bff, #6610f2);">
            <h3 class="mb-0"><i class="bi bi-person-circle"></i> @Model.DriverName</h3>
        </div>

        <!-- Body -->
        <div class="card-body bg-light p-4">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong><i class="bi bi-geo-alt"></i> City:</strong> @Model.City</li>
                <li class="list-group-item">
                    <strong><i class="bi bi-telephone"></i> Contact:</strong>
                    <a href="tel:@Model.ContactPerson" class="text-primary">@Model.ContactPerson</a>
                </li>
                @if (!string.IsNullOrEmpty(Model.User.Email))
                {
                    <li class="list-group-item">
                        <strong><i class="bi bi-envelope"></i> Email:</strong>
                        <a href="mailto:@Model.User.Email" class="text-primary">@Model.User.Email</a>
                    </li>
                }
                <li class="list-group-item"><strong><i class="bi bi-card-text"></i> Description:</strong> @Model.Description</li>
            </ul>
        </div>

        <!-- Footer -->
        <div class="card-footer d-flex justify-content-between bg-white p-3">
            <a asp-action="DriverList" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Drivers
            </a>
        </div>
    </div>
</div>
