@model RadioCabs.Models.Company

@{
    ViewData["Title"] = "Company Profile";
}

<partial name="_Alert"/>
<h2 class="mt-3 text-center">Company Profile</h2>

<div class="card shadow-lg p-5 my-4 mx-auto" style="min-height:90vh; max-width:800px;">
    <div class="row">
        <div class="col-md-4 text-center">
            <h4 class="mt-3">@Model.CompanyName</h4>
            <p class="text-muted">@Model.Membership Member</p>
        </div>

        <div class="col-md-8">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Company ID:</th>
                        <td>@Model.CompanyID</td>
                    </tr>
                    <tr>
                        <th>Designation:</th>
                        <td>@Model.Designation</td>
                    </tr>
                    <tr>
                        <th>Address:</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th>Membership:</th>
                        <td>@Model.Membership</td>
                    </tr>
                </tbody>
            </table>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Profile</a>
        </div>
    </div>
</div>
