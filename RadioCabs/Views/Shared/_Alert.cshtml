<script>
	document.addEventListener("DOMContentLoaded", function () {
		@if (TempData["Success"] != null)
		{
			<text>
				Toastify({
					text: "@TempData["Success"]",
					duration: 3000,
					gravity: "top",
					position: "right",
					backgroundColor: "linear-gradient(to right, #28a745, #218838)",
					stopOnFocus: true
				}).showToast();
			</text>
		}

		@if (TempData["Error"] != null)
		{
			<text>
				Toastify({
					text: "@TempData["Error"]",
					duration: 3000,
					gravity: "top",
					position: "right",
					backgroundColor: "linear-gradient(to right, #dc3545, #c82333)",
					stopOnFocus: true
				}).showToast();
			</text>
		}

		@if (TempData["Message"] != null)
		{
			<text>
				Toastify({
					text: "@TempData["Message"]",
					duration: 3000,
					gravity: "top",
					position: "right",
					backgroundColor: "linear-gradient(to right, #17a2b8, #138496)",
					stopOnFocus: true
				}).showToast();
			</text>
		}
	});
</script>
