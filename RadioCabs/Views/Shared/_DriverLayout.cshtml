<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"] - Driver Dashboard</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/RadioCabs.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/images/favicon.png" type="image/x-icon" />

	<!-- Toastify CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

	<!-- Font Awesome -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

	<!-- Bootstrap Icons -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>

	<!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Driver" asp-action="Dashboard">
                <i class="bi bi-car-front me-2"></i> Driver Dashboard
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- Home Link -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")" asp-controller="Driver" asp-action="Dashboard">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>

                    <!-- Company Services Link -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Services" ? "active" : "")" asp-controller="Driver" asp-action="Services">
                            <i class="bi bi-building"></i> Company Services
                        </a>
                    </li>

                    <!-- Subscription Link -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Subscription" ? "active" : "")" asp-controller="Driver" asp-action="Subscription">
                            <i class="bi bi-credit-card"></i> Subscription
                        </a>
                    </li>

                    <!-- Profile Link -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Profile" ? "active" : "")" asp-controller="Driver" asp-action="Profile">
                            <i class="bi bi-person"></i> Profile
                        </a>
                    </li>

                    <!-- Logout Button -->
                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="btn btn-link nav-link text-danger"><i class="bi bi-box-arrow-right"></i> Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>




	<!-- Optional: Set ActivePage in the controller -->
	@{
		if (ViewData["ActivePage"] == null)
		{
			ViewData["ActivePage"] = "Dashboard";  // Set default active page as Dashboard
		}
	}


	<!-- Main Content -->
	<main class="container-fluid container-content p-0">
		@RenderBody()
	</main>

	<!-- Toastify JS -->
	<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
