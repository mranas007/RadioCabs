@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - RadioCabs</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/RadioCabs.styles.css" asp-append-version="true" />
	<link rel="icon" href="~/images/favicon.png" type="image/x-icon" />

	<!-- Toastify CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

	<!-- Font Awesome -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">


	<!-- Bootstrap Icons -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>

	@* Navbar *@
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
			<div class="container">
				<a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
					<i class="bi bi-taxi-front-fill me-2"></i> RadioCabs
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
						aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link text-white fw-semibold" asp-controller="Home" asp-action="Index">Home</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-white fw-semibold" href="@Url.Action("Index", "Home")#driver">Drivers</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-white fw-semibold" href="@Url.Action("Index", "Home")#services">Services</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white fw-semibold" href="@Url.Action("Index", "Home")#advertise">Advertise</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white fw-semibold" asp-controller="Home" asp-action="Feedback">Feedback</a>
						</li>
					</ul>

					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link btn btn-outline-light px-3 me-2" asp-controller="Account" asp-action="Login">
								<i class="bi bi-box-arrow-in-right me-1"></i> Login
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link btn btn-light text-primary px-3" asp-controller="Account" asp-action="Register">
								<i class="bi bi-person-plus me-1"></i> Register
							</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>



	<div class="container-fluid p-0">
		<main role="main">
			@RenderBody()
		</main>
	</div>
	<partial name="_Alert" />
	@* footer *@
	<!-- Footer -->
	<footer class="bg-dark text-white text-center text-md-start">
		<!-- Grid container -->
		<div class="container p-4">
			<!--Grid row-->
			<div class="row">
				<!--Grid column-->
				<div class="col-lg-6 col-md-12 mb-4 mb-md-0">
					<h5 class="text-uppercase">
						<a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
							<i class="fas fa-taxi me-2"></i> RadioCabs
						</a>
					</h5>

					<p>
						We connect riders and cab drivers seamlessly across cities. Whether you're a company looking to list your fleet, or a driver seeking more visibility — we're here to empower your journey.
					</p>
				</div>
				<!--Grid column-->
				<!--Grid column-->
				<div class="col-lg-3 col-md-6 mb-4 mb-md-0">
					<h5 class="text-uppercase">Quick Links</h5>

					<ul class="list-unstyled mb-0 text-white">
						<li>
							<a asp-controller="Home" asp-action="AboutUs">About Us</a>
						</li>
						<li>
							<a href="@Url.Action("Index", "Home")#services">Services</a>
						</li>
						<li>
							<a href="@Url.Action("Index", "Home")#advertise">Advertise</a>
						</li>
						<li>
							<a asp-controller="Feedback" asp-action="Index">FeedBack</a>
						</li>
					</ul>
				</div>
				<!--Grid column-->

			</div>
			<!--Grid row-->
		</div>
		<!-- Grid container -->
		<!-- Copyright -->
		<div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
			© 2020 Copyright:
			<a class="navbar-brand text-white" asp-controller="Home" asp-action="Index">
				<i class="fas fa-taxi ms-2"></i> RadioCabs
			</a>
		</div>
		<!-- Copyright -->
	</footer>
	<!-- Footer -->
	<!-- Toastify JS -->
	<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>