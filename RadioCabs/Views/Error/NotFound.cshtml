@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h1 class="display-1 text-danger">404</h1>
                    <h3 class="text-dark">Oops! Page Not Found</h3>
                    <p class="text-muted">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                        <i class="bi bi-house-door"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
