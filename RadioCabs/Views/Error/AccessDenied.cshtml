@{
    ViewData["Title"] = "Access Denied";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h1 class="display-1 text-warning"><i class="bi bi-exclamation-triangle"></i></h1>
                    <h2 class="text-danger">403 - Access Denied</h2>
                    <p class="text-muted">
                        You do not have permission to access this page. If you believe this is a mistake, please contact support.
                    </p>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                        <i class="bi bi-house-door"></i> Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
